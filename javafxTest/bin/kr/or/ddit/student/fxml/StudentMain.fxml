<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kr.or.ddit.student.main.StudentMainController">
   <center>
      <TableView fx:id="stdTable" onMouseClicked="#stdTableClicked" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="stdNameCol" prefWidth="75.0" text="이 름" />
          <TableColumn fx:id="stdKorCol" prefWidth="75.0" text="국 어" />
            <TableColumn fx:id="stdEngCol" prefWidth="75.0" text="영 어" />
            <TableColumn fx:id="stdMatCol" prefWidth="75.0" text="수 학" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#btnAddClick" text="추가" />
            <Button fx:id="btnViewBarChart" mnemonicParsing="false" onAction="#btnViewBarChartClick" text="학생별 막대그래프" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
